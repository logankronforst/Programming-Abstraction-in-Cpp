{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure recursion",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "${workspaceFolder}/Chapter-7/Recursion",
                "-B", "${workspaceFolder}/Chapter-7/Recursion/build",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Build recursion",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "${workspaceFolder}/Chapter-7/Recursion/build",
                "--target", "recursion"
            ],
            "dependsOn": "Configure recursion",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
